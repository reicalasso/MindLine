rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Sadece giriş yapmış kullanıcılar yükleyebilir
    match /{allPaths=**} {
      allow read, write: if request.auth != null && 
        (request.auth.token.email == 'yintsukuyomi@proton.me' || 
         request.auth.token.email == 'maruko@gmail.com');
    }
  }
}
