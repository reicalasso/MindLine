rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Sadece giriş yapmış kullanıcılar okuyabilir/yazabilir
    match /{document=**} {
      allow read, write: if request.auth != null && 
        (request.auth.token.email == 'yintsukuyomi@proton.me' || 
         request.auth.token.email == 'maruko@gmail.com');
    }
  }
}
